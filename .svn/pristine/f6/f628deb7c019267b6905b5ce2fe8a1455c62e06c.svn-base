iew></view></view><view class="mar_left20"><radio color="#00c4bc" value="{{item.id}}" checked="{{index===current}}"></radio></view></label></block></radio-group></scroll-view></view></view><view><view class="confirm remark_box"><button class="chorce_btn" hover-class="active" data-event-opts="{{[['tap',[['choriceNurse',['$event']]]]]}}" bindtap="__e">选择护工</button><button data-event-opts="{{[['tap',[['changeNurseFn',['$event']]]]]}}" class="confirm_btn" bindtap="__e">确认更换</button></view></view></view></view><view hidden="{{!(evaluate==true)}}" class="assess"><view class="assess_item"><view class="uni-flex pd_b20"><view class="uni-rate-title">评分：</view><uni-rate vue-id="dcdb43d4-2" value="3" data-event-opts="{{[['^change',[['changeStarts']]]]}}" bind:change="__e" bind:__l="__l"></uni-rate></view><view class="uni-textarea"><textarea class="border-textarea" placeholder-style="color:#d2d2d2" placeholder="评价内容：" data-event-opts="{{[['input',[['__set_model',['','text_val','$event',[]]]]]]}}" value="{{text_val}}" bindinput="__e"></textarea></view><view><view class="confirm"><button data-event-opts="{{[['tap',[['confirmFn',['$event']]]]]}}" class="confirm_btn" bindtap="__e">提交评价</button></view></view></view></view></view></view></view></view>