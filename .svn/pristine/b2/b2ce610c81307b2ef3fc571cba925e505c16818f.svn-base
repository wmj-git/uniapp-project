					data: {
						operate: "MemberCenter.member_bing",
						token: this.token
					},
					success: (res) => {
						console.log("角色")										
						let arrType = res.data.data.list;
						console.log(res)
						if(res.data.code !==1){
							if(res.data.code==4002){
								console.log(res.data.code)
								
							}
							var info = res.data.info
							return uni.showToast({
								title:info,
								icon: "none"
							})
							
						}else{
							if(arrType!==[]){
								arrType.forEach((item, index) => {
									if(item.type==1){
										this.workerRShow = true;
										return false;
									}
									if(item.type==2){
										this.serverLShow = true;
										return false;
									}
									if(item.type==3){
										this.extendShow = true;
										return false;
									}
									
									
									
								})
							
							
							}else{
								
								let arrMember = res.data.data.member;
								arrMember.forEach((item, index) => {	
									if(item.role==1||item.role==2||item.role==3){
										this.workerRShow = false;	
										return false;
									}
									if(item.role==2){
