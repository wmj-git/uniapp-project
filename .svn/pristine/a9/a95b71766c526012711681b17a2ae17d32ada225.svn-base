<script>     
	import app from "../../App.vue";
	export default {
		name: 'inDex',
		components: {
		},
		created () {
			const demo = uni.getMenuButtonBoundingClientRect()
			this.demo.top = demo.top
			this.demo.height = demo.height										
		},
		
		mounted (){
			
		},
		data () {
			return {
				token:"",
				scene:"",
				demo: {
					top: 0,
					height: 0
				},
				fromIdShow:false, //推荐人信息是否显示
				goods_list:[],    //健康管理
				goods_list_ad:[],  //最新活动
				options:[],   //普通商品热门推荐				
				from_mid:"",     //推广人id
				from_headimg:"", //推广人头像
				from_nickname:"" //推广人名字				
			}
		},
		
		methods: {		
			onClick(index, item) {
				var id=item.id;	
				uni.navigateTo({
					url: "../../pagesB/makedetail/makedetail?id="+id
				});				
			},
			onClickPrd(index, item) {	
				var id=item.id;	
				uni.navigateTo({
					url: "../detail/detail?id="+id
				});				
			},
			advert(id,type_id){
				// type_id=2是普通商品
				if(type_id==1){
					uni.navigateTo({
						url: "../../pagesB/makedetail/makedetail?id="+id
					});	
				}else if(type_id==2){
					uni.navigateTo({
						url: "../detail/detail?id="+id
					});	
				}
				
					
			},
			exitTap(){
				uni.showModal({
					title:"确认要退出么？",
					success: (res) => {
						if(res.confirm){
							uni.removeStorageSync('from_mid'); 
							uni.setStorageSync('from_mid', 0);//初始值
							uni.reLaunch({
								url:"../index/index"
							})
							
						}else if(res.cancel){
							console.log('用户点击取消')
						}
					}
				})	
				
			},	
			async indexList(){	
				const res = await this.$myRequset({
				    url: '/api', 
				    data: {
				        operate: 'index.index',
						token:this.token
				    }
				});
				//console.log(res)
				 this.goods_list = res.data.data.list[2].goods_list;
				 this.goods_list_ad = res.data.data.list[1].goods_list;
				 this.options=res.data.data.list[0].goods_list;
			},
			async from_infoAPI(){
				const res = await this.$myRequset({
				    url: '/api', 
					method:'POST',
				    data: {
				        operate: 'index.get_from_info',
						from_id:this.from_mid
				    }
				});
				console.log("推广人个人信息")
				console.log(res)			
				this.from_headimg = res.data.data.headimg
				this.from_nickname = res.data.data.nickname
			},
			onShow(){				
				console.log("options3")
				this.from_mid = uni.getStorageSync('from_mid');	
				console.log(this.from_mid)		
				this.indexList();
			},
			onLoad(options) {
				this.scene = decodeURIComponent(options.scene)
				 uni.showToast({
				 	title:scene,
				 	duration: 6000,
				 	icon: "none"
				 })
				this.from_mid = options.from_mid	
				let from_mid = options.from_mid
				if(from_mid !==undefined&&from_mid !==''){
					uni.clearStorage();
					uni.setStorageSync('from_mid',from_mid)	
					console.log("第一遍"+ this.from_mid)
				}
		
				
				uni.showLoading({
					title: '加载中...'
				});
				if(this.from_mid!==undefined&&this.from_mid!==''){
					this.from_infoAPI();
					this.fromIdShow=true
					
				}				
			   if(app.globalData.token==undefined){
					this.token = uni.getStorageSync('token');
			   }else{
					let _this = this;  
					_this.token = app.globalData.token;		
					_this.indexList();								
					 uni.hideLoading();							
			   }					   

			}

		}
		//一级
		
		
	}
	
</script>

