<script>
	import MxDatePicker from "../../components/mx-datepicker/mx-datepicker.vue";
	import uniIcons from "../../components/uni-icons/uni-icons.vue";
	import {updateUserInfo} from "../../common/updataInfo.js"
	import {formatDate} from '../../common/util.js'
	import app from "../../App.vue"
	var mydate = new Date();
	var mytime =mydate.getFullYear()+'-'+ (mydate.getMonth()+1) +'-'+mydate.getDate();
	
	export default {
		name: 'deTail',
		components: {
			MxDatePicker,
			uniIcons
		},
		onLoad: function (option) { 
			var goods_id= option.id;
			this.detail(goods_id,this.token);
			this.goods_id=goods_id
			this.login();
		},
		created () {
			const demo = uni.getMenuButtonBoundingClientRect()
			this.demo.top = demo.top
			this.demo.height = demo.height
			
			uni.setNavigationBarColor({
				frontColor: '#000000',
				backgroundColor: '#000000'
			})
		},
		props: {
			activeColor: {
				// 星星选中状态颜色
				type: String,
				default: "#ffca3e"
			},
			size: {
				// 星星的大小
				type: [Number, String],
				default: 14
			}
		},
		data(){
			return{
				token:"",
				phone:'',
				nickName:"",
				avatarUrl:"",
				from_mid:0,
				isphoneView:false,
				current: 0,
				fold:true,
				btnspec:true,
				demo: {
					top: 0,
					height: 0
				},
				goods_id:"",
				goodsdtail:[],//商品详情数据
				showPicker:false,//时间状态
				datetime: mytime,
				type:'rangetime',//时间插件类型
				value:'',//时间插件
				num:1,//下单数量默认是1
				isminNormal:false,
				ismaxNormal:true,
				goodsInfo:{},
				
				totalPrice:{
					"marketPrice":0,
					"shopPrice":0
				},

				orderParam:{},
				States:{},
				specs:[],
				specList:[],
				goods_spec:"",	
				
			}
		},
		methods: {	
			// 获取微信用户信息
			getUserinfo: function(){				
				 var that=this;
				 uni.getUserInfo({
					success: function(res) {
						var userInfo = res.userInfo
						that.nickName = userInfo.nickName    //昵称
						that.avatarUrl = userInfo.avatarUrl //头像
						var gender = userInfo.gender //性别 0：未知、1：男、2：女
						var province = userInfo.province
						var city = userInfo.city
						var country = userInfo.country														
						that.isphoneView = true
						that.isCanUse=false; //记录是否第一次授权  false:表示不是第一次授权
	                    app.updateUserInfo();
						
					},
					fail:res=>{
					 uni.showToast({ 
						 title: '获取微信信息失败', 
						 duration: 2000 ,
						 icon:"none"
						 })						  
					}
				 })
			},
			login(){
					uni.showLoading({
						title: '加载中...',
					});
					// 1.wx获取登录用户code
					var _this = this;	
								
					app.wxLogin().then(res => {
							if(uni.getStorageSync('from_mid')==''){
								_this.from_mid=0;
							}else{
								_this.from_mid = uni.getStorageSync('from_mid');
							}
							
							if(app.globalData.token==undefined){
								_this.token = uni.getStorageSync('token');
							}else{
								_this.token = app.globalData.token;
							}	
							
						   if(app.globalData.nickName==""){
								_this.nickName = uni.getStorageSync('nickName');
						   }else{			
								_this.nickName = app.globalData.nickName;					
								_this.phone = app.globalData.phone;	
								_this.avatarUrl = app.globalData.headimg;						
								if(_this.nickName!==""){
									_this.isCanUse=false
									app.updateUserInfo();
								} else{
									_this.isCanUse=true
									app.updateUserInfo();
								} 					 
								if(_this.phone==""||_this.phone==null||_this.phone==undefined){
									_this.isphoneView=true
									
								}else{
									_this.isphoneView= false
								}
								                			
				                  uni.hideLoading();						
												
												
												
						   }					   
					});			
								
									
				   
	        },
				
			onGetPhoneNumber(e){
				const session_key = uni.getStorageSync('session_key');
				if (e.detail.errMsg == 'getPhoneNumber:ok') {
					this.isphoneView = false;
				} else {
			 
				}				
				let encryptedData = e.detail.encryptedData;
				let iv=e.detail.iv;
				
				uni.request({
					url:"https://test134.vrapp.chot.cn/api",
					method:"POST",
					data:{
						operate:'Wechat.get_phone',
						session_key:session_key,
						encryptedData:encryptedData,
						iv:iv
						
					},
					success: (res) => {				
						if(res.data.code==1){
							let jsonData =res.data.data;
							let phoneData = JSON.parse(jsonData);												
							this.phone = phoneData.phoneNumber;	
							updateUserInfo(phoneData.phoneNumber,this.token);	//手机号	 调用updataInfo.js											
							
						}else{
							uni.showToast({
								title: '手机号授权失败',
								duration: 1000,
								icon:"none"
							});
							this.isphoneView=false;
						}
						
						
						
					}
				})
				
			
			},	
			radioChange: function(evt) {
				for (let i = 0; i < this.items.length; i++) {
					if (this.items[i].value === evt.target.value) {
						this.current = i;
						break;
					}
				}
			},
			orderChange(index,index1){
				this.States[index] = index1;
				//console.log("ss"+this.States[index]);
				console.log([index,index1]);
				
				console.log(this.specs[index].list[index1].name);
				
				this.build_order_data();
				// this.isCheckState =index
				// this.isCheckStates=index1
				
			},
			async callPhoneTap(){				
				const res = await this.$myRequset({
					url:"/api",
					data:{
						operate:"index.store_phone",
						token:this.token
					}					
				})
				uni.makePhoneCall({
					phoneNumber:res.data.data.phone,
					success: (res) => {
						console.log("拨打成功");
					},fail: (res) => {
						console.log("拨打失败");
					}
				})
				
			},
			build_order_data() {
				
				let goods_spec = this.build_spec_key();
				this.orderParam['token'] = this.token;
				this.orderParam['rule'] = this.goodsInfo.id + '@' + goods_spec + '@' + this.num;
				this.orderParam['from_mid'] = this.from_mid;
				this.orderParam['from_token'] = '';
				this.orderParam['order_type'] = 2;
				this.orderParam['nurse_id'] = 1;
				this.orderParam['caregivers_id'] = 1;
				this.orderParam['start_time'] = this.datetime;
				
				console.log(this.orderParam)		
				this.specList.forEach((item,index) => {
					if (item.goods_spec == goods_spec) {
						this.totalPrice.marketPrice = item['price_market'];
						this.totalPrice.shopPrice = item['price_selling'];
						
					}
				});
		
				
			},
			build_spec_key(){
				let str = '';
				let count = this.specs.length;

				this.specs.forEach((item,index)=>{
					str += item.name + '::' + item.list[this.States[index]]['name'];
					if (index + 1 != count) {
						str += ';;';
					}
				});

				return str;
			},
			
			backleft(e){
			  	uni.navigateBack();
			},
			choice_workers(){
				let goods_spec = this.build_spec_key();
				let rule = this.goodsInfo.id + '@' + goods_spec + '@' + this.num;
				let from_mid = this.from_mid;
				let from_token = '';
				let order_type = 2;
				let start_time = this.datetime;
				let goods_id = this.goods_id
				let token = this.token;
				uni.navigateTo({
					url: "../specs/specs?token="+token+"&rule="+rule+"&start_time="+start_time+"&goods_id="+goods_id+"&goods_spec="+goods_spec+"&from_mid="+from_mid
				});	
			},			
			subscribe_btn(e){				
				uni.request({
					url:"https://test134.vrapp.chot.cn/api",
					method:"POST",
					data:{
						operate:"MemberCenter.get_phone",
						token:this.token
					},success: (res) => {
						console.log("电话号码:"+res.data.data)
						if(res.data.data==""||res.data.data==null||res.data.data==undefined){
							this.isphoneView=true
							
						}else{
							this.isphoneView=false;
							this.fold=false;
							this.btnspec=false;					
							let goods_spec = this.build_spec_key();
							this.specList.forEach((item,index) => {
								if (item.goods_spec == goods_spec) {
									this.totalPrice.marketPrice = item['price_market'];
									this.totalPrice.shopPrice = item['price_selling'];
								}
							});
						}
						
					}
				})
				
				
				
			},
			
			spec_close(e){
				this.fold=true;
				this.btnspec=true
			},
			worker_close(e){
				this.workershow=false;
			},
			worker_ok(){
				this.workershow=false;
			},
			 async detail(goods_id,token){
				const res = await this.$myRequset({
					url:"/api",
					data:{
						operate:"Goods.get",
						token:token,
						goods_id:goods_id
					}					
				})
				
				let index = 0;
				var obj={}
				var States = {};
				for(obj in res.data.data.specs){
					
					States[index] = 0;
					
					index++;
				}
				
				this.States = States;
				console.log("详情")
				console.log(res)
				this.goodsdtail =res.data.data
				
					if(this.goodsdtail.unit==1){
						this.goodsdtail.unit="天"
					}else if(this.goodsdtail.unit==2){
						this.goodsdtail.unit="月"
					}else if(this.goodsdtail.unit==3){
						this.goodsdtail.unit="小时"
					}else if(this.goodsdtail.unit==10){
						this.goodsdtail.unit="个"
					}
					else if(this.goodsdtail.unit==11){
						this.goodsdtail.unit="千克"
					}
					else if(this.goodsdtail.unit==12){
						this.goodsdtail.unit="套"
					}
					
			
				
				this.goodsInfo = res.data.data;
				this.specs=res.data.data.specs
				this.specList = res.data.data.list
				
				console.log(this.States);
			},
			
			onShowDatePicker(type){
				this.type = type;
				this.showPicker = true;
				this.value = this[type];
				
			},
			onSelected(e){
				this.showPicker = false;
				if(e){
					this[this.type] = e.value;
					console.log('value=>'+e.value);
					this.datetime =e.value				
				}
			},
			//点击减号
			bindMinus(){
				var num = this.num;
				if(num>1){
					num--;
					this.num = num;
					this.ismaxNormal=true
				}else{
					this.isminNormal=false
				}
				
			},
			//点击加号
			bindPlus(){
				var num = this.num;
				if(num<9999){
					num++;
					this.num = num;
					this.isminNormal=true
				}else{
					
					this.ismaxNormal=false
				}
			},
			bindManual(e){
				var num = e.detail.value;
				this.num = num;
			}
		}
	}
</script>

